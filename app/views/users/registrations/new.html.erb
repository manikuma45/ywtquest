<div class="container">
  <div class="signup-container">
    <h2 class="mb-3">新規登録</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length}文字以上必要です" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions signup-form">
        <%= f.button :submit, "登録する", class: "btn btn-block btn-info mt-5" %>
      </div>
    <% end %>
  </div>

  <%= render "users/shared/links" %>
</div>