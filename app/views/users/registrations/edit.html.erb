<div class="container">
  <h2>ユーザー情報の編集</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: false,
                  placeholder: "表示名",
                  hint: "30文字まで" %>
      <%= f.input :email, 
                  # required: true, 
                  autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      
      <%= f.input :profile, 
                  required: false,
                  placeholder: "自己紹介",
                  hint: "255文字まで" %>
      <%= f.input :password,
                  hint: "パスワードを変更する場合は、ここに新しいパスワードを入力してください",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "パスワードを変更する場合は、ここに現在のパスワードを入力してください",
                  # required: true,
                  input_html: { autocomplete: "current-password" } %>  
    </div>

    <div class="form-actions update-button">
      <%= f.button :submit, "更新", class: 'btn btn-block btn-primary mb-5'%>
    </div>
  <% end %>

  <p><%= link_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger float-right" %></p>

  <%= link_to "Back", :back, class: 'btn btn-grayishorange back-btn' %>
</div>